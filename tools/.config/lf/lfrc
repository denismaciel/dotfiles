cmd mkdir ${{

  printf "Directory Name: "
  read ans
  mkdir $ans
}}


cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Basic Functions
set hidden
map . set hidden!
map au unarchive
map DD delete
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear


map gd cd ~/Downloads

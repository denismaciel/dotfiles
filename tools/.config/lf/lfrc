cmd mkdir ${{

  printf "Directory Name: "
  read ans
  mkdir $ans
}}


cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd fzf_select ${{
	list="$(fzf)"
	lf -remote "send $id select \"$list\""
}}

# Basic Functions
set hidden true
set ignorecase true
set icons true
set number
set drawbox

set previewer pistol
map . set hidden!
map au unarchive
map D delete
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear

map <space>
map <space>ff fzf_select
map <space>fc fzf_select

map gd cd ~/Downloads
